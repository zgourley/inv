

<%= link_to "Back to inventory list",lists_path%>

<h1>My Inventory </h1>



<%= link_to "Add new item", new_item_path%>
<br>
<section>
    <% @items.each do |item| %>
      <div>
        <p><strong>Name:</strong> <%= item.item_name %></p> 
        <p><strong>Type:</strong> <%= item.kind %></p>    
        <p><strong>Weight:</strong> <%= item.weight %></p>
        <p><strong>Description:</strong> <%= item.description %></p>
        <%= link_to "More info", item_path(item) %>
        <%= link_to "Delete this item", delete_item_path(item.id), method: :delete, data: { confirm: "Are you sure you want to delete this item?"} %>
      
        
    <%end%>

      </div>  
</section>

