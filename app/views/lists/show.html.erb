<h1>Inventory Name</h1>

<%= link_to "Back to inventory list",lists_path%>

<%= link_to "Add new item", new_item_path%>
<br>
<section>
    <% @list.items.each do |item| %>
      <div>
        <p><strong>Name:</strong> <%=  item.item_name %></p> 
        <p><strong>Type:</strong> <%= item.kind %></p>    
        <p><strong>Weight:</strong> <%= item.weight %></p>
        <p><strong>Description:</strong> <%= item.description %></p>
        <%= link_to "More info", item_path(item) %>
        <%= link_to "Delete this item", delete_item_path(item.id), method: :delete, data: { confirm: "Are you sure you want to delete this item?"} %>
      
        
    <%end%>

      </div>  
</section>

<h1>Add a new Item</h1>

<%= form_for [@list, @item] do |f| %>

  <div>
    <%= f.label :item_name%>
    <%= f.text_field :item_name%>
  </div>

  <div>
    <%= f.label :kind%>
    <%= f.text_field :kind%>
  </div>

   <div>
    <%= f.label :weight%>
    <%= f.number_field :weight%>
  </div>

   <div>
    <%= f.label :description%>
    <%= f.text_area :description%>
  </div>

  <%= f.submit "Add a new item" %>

<%end%>
