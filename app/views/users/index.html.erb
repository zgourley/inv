<h1>Users</h1>

<ul>
  <% @users.each do |user| %>
  <li> 
    <%= user.name %> - <%= user.email %> 
    <%= link_to "Delete this user", delete_user_path(user.id), method: :delete, data: { confirm: "Are you sure you want to delete this user?"} %>
    <%= link_to "More info", user_path(user) %>
    
  </li>
  <%end%>

  <%= link_to "Add new user", new_user_path %>
</ul>